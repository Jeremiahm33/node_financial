<h1><b>Customers</b></h1>
<table>
  <tr>
    <th><h3><b>ID</b></h3></th>
    <th><h3><b>Name</b></h3></th>
    <th><h3><b>Email</b></h3></th>
    <th></th>
    <th></th>
    <th></th>
  </tr><br>
  <% _.each(customers, function(customer) { %>
  <tr data-id="<%= customer.id %>" data-model="customer" >
    <td width="30px"><%= customer.id %></td>
    <td width="200px"><%= customer.name %></td>
    <td width="200px"><%= customer.email %></td>
    <td width="50px"><a href="/customer/show/<%= customer.id %>">Show</a></td>
    <td width="50px"><a href="/customer/edit/<%= customer.id %>">Edit</a></td>
    <td width="50px"><a href="/customer/destroy/<%= customer.id %>">Delete</a></td>
  </tr>
  <% }) %>
</table>
<br>
<br>
<form action="/customer/new/" method="POST">
  <input type="submit" value="Create New Customer" />
</form><br>
<form action="/" method="POST">
  <input type="submit" style="float:right" value="Homepage" />
</form>

